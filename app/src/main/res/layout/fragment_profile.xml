<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_marginBottom="35dp"
        android:src="@drawable/profile"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:gravity="center"
        android:text="Seleccione uno de los campos para modificarlo"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_primary"
            android:hint="Escribe aquí tu nombre..."
            android:textSize="13sp"
            android:maxLength="25"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryText"
            android:textColorHint="@color/colorPrimaryText"
            android:layout_marginBottom="20dp"
            android:imeOptions="actionNext"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_primary"
            android:hint="Escribe aqui tu número telefónico..."
            android:textSize="13sp"
            android:maxLength="8"
            android:inputType="number"
            android:digits="0123456789"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryText"
            android:textColorHint="@color/colorPrimaryText"
            android:layout_marginBottom="20dp"
            android:imeOptions="actionNext"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_primary"
            android:hint="Escribe aqui tu estado..."
            android:textSize="13sp"
            android:maxLength="100"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryText"
            android:textColorHint="@color/colorPrimaryText"
            android:layout_marginBottom="20dp"
            android:imeOptions="actionNext"
            android:padding="10dp"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/solid_primary"
            android:text="Actualizar"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:textSize="12dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:textColor="#fff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/loguot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/solid_primary"
                android:text="Cerrar sesión"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:textSize="12dp"
                android:layout_marginEnd="8dp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:textColor="#fff"/>

            <Button
                android:id="@+id/posts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/solid_primary"
                android:layout_marginStart="8dp"
                android:text="Entradas"
                android:textSize="12dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:textColor="#fff"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>